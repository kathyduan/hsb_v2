<!-- Validation failure messages -->
<% if @workout.errors.any? %>
  <% @workout.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Workout #<%= @workout.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_workout/<%= @workout.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for studio_name -->
      <div class="form-group">
        <label for="studio_name" class="control-label">
          Studio name
        </label>

        <input type="text" id="studio_name" name="studio_name" placeholder="Studio name" class="form-control" value="<%= @workout.studio_name %>">
      </div>

      <!-- Label and input for workout_type -->
      <div class="form-group">
        <label for="workout_type" class="control-label">
          Workout type
        </label>

        <input type="text" id="workout_type" name="workout_type" placeholder="Workout type" class="form-control" value="<%= @workout.workout_type %>">
      </div>

      <!-- Label and input for address -->
      <div class="form-group">
        <label for="address" class="control-label">
          Address
        </label>

        <input type="text" id="address" name="address" placeholder="Address" class="form-control" value="<%= @workout.address %>">
      </div>

      <!-- Label and input for neighborhood_id -->
      <div class="form-group">
        <label for="neighborhood_id" class="control-label">
          Neighborhood
        </label>

        <%= select_tag(:neighborhood_id,
      options_from_collection_for_select(Neighborhood.all, :id, :name,
      @workout.neighborhood_id), :class => "form-control") %>

      </div>
      <!-- Label and input for hsb_rating -->
      <div class="form-group">
        <label for="hsb_rating" class="control-label">
          Hsb rating
        </label>

        <input type="text" id="hsb_rating" name="hsb_rating" placeholder="Hsb rating" class="form-control" value="<%= @workout.hsb_rating %>">
      </div>

      <!-- Label and input for notes -->
      <div class="form-group">
        <label for="notes" class="control-label">
          Notes
        </label>

        <textarea id="notes" name="notes" placeholder="Notes" class="form-control" rows="3"><%= @workout.notes %></textarea>
      </div>



      <button class="btn btn-warning">
        Update Workout
      </button>
      or
      <a href="/workouts/<%= @workout.id %>">Cancel</a>
    </form>
  </div>
</div>
