<!-- Validation failure messages -->
<% if @restaurant.errors.any? %>
  <% @restaurant.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Restaurant #<%= @restaurant.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_restaurant/<%= @restaurant.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for restaurant_name -->
      <div class="form-group">
        <label for="restaurant_name" class="control-label">
          Restaurant name
        </label>

        <input type="text" id="restaurant_name" name="restaurant_name" placeholder="Restaurant name" class="form-control" value="<%= @restaurant.restaurant_name %>">
      </div>

      <!-- Label and input for neighborhood_id -->

      <div class="form-group">
        <label for="neighborhood_id" class="control-label">
          Neighborhood
        </label>

      <%= select_tag(:neighborhood_id,
      options_from_collection_for_select(Neighborhood.all, :id, :name,
      @restaurant.neighborhood_id), :class => "form-control") %>

      <!-- Label and input for address -->
      <div class="form-group">
        <label for="address" class="control-label">
          Address
        </label>

        <input type="text" id="address" name="address" placeholder="Address" class="form-control" value="<%= @restaurant.address %>">
      </div>

      <!-- Label and input for cuisine -->
      <div class="form-group">
        <label for="cuisine" class="control-label">
          Cuisine
        </label>

        <input type="text" id="cuisine" name="cuisine" placeholder="Cuisine" class="form-control" value="<%= @restaurant.cuisine %>">
      </div>


      <!-- Label and input for hsb_rating -->
      <div class="form-group">
        <label for="hsb_rating" class="control-label">
          HSB rating
        </label>

        <input type="text" id="hsb_rating" name="hsb_rating" placeholder="Hsb rating" class="form-control" value="<%= @restaurant.hsb_rating %>">
      </div>


      <button class="btn btn-warning">
        Update Restaurant
      </button>
      or
      <a href="/restaurants/<%= @restaurant.id %>">Cancel</a>
    </form>
  </div>
</div>
